{
  "name": "fritz-site",
  "version": "1.0.1-alpha.0",
  "description": "Template for creating apps with Fritz",
  "main": "src/app/app.js",
  "private": true,
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "preview": "astro preview",
    "build-old": "npm run build:client && npm run build:server",
    "build:client": "fritz build --client",
    "build:server": "fritz build --server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "wireit": {
    "dev": {
      "command": "astro dev",
      "dependencies": ["../astro-fritz:build", "../core:build"],
      "service": true,
      "readyWhen": {
        "lineMatches": "started in"
      }
    },
    "build": {
      "command": "astro build",
      "dependencies": ["../astro-fritz:build", "../core:build"],
      "files": ["src/**/*"],
      "output": ["dist/**/*"]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthewp/fritz-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/matthewp/fritz-template/issues"
  },
  "homepage": "https://github.com/matthewp/fritz-template#readme",
  "devDependencies": {
    "astro": "^2.0.0-beta.0",
    "fritz": "^5.0.0-alpha.6",
    "lowlight": "^1.12.1",
    "rollup": "^1.16.6"
  },
  "dependencies": {
    "astro-fritz": "^2.0.0-alpha.0"
  }
}
