{
  "name": "fritz-site",
  "version": "1.0.1-alpha.0",
  "description": "Fritz site and documentation",
  "main": "dist/index.html",
  "private": true,
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "preview": "wireit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "wireit": {
    "dev": {
      "command": "astro dev",
      "dependencies": [
        "../astro-fritz:build",
        "../core:build"
      ],
      "service": true,
      "readyWhen": {
        "lineMatches": "started in"
      }
    },
    "build": {
      "command": "astro build",
      "dependencies": [
        "../astro-fritz:build",
        "../core:build"
      ],
      "files": [
        "astro.config.mjs",
        "src/**/*"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "preview": {
      "command": "astro preview",
      "dependencies": [
        "build"
      ],
      "service": true,
      "readyWhen": {
        "lineMatches": "started in"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthewp/fritz-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/matthewp/fritz-template/issues"
  },
  "homepage": "https://github.com/matthewp/fritz-template#readme",
  "devDependencies": {
    "astro": "^2.0.0-beta.2",
    "astro-fritz": "^2.0.0-alpha.0",
    "fritz": "^5.0.0-alpha.6",
    "highlight.js": "^9.15.8",
    "lowlight": "^1.12.1",
    "rehype-highlight": "^6.0.0",
    "rollup": "^1.16.6"
  }
}
