---
import Flame from './Flame.astro';
import Slant from './effects/Slant.astro';

export type Props = {
  size?: 'small' | 'large';
}

const { size = 'small' } = Astro.props as Props;
---
<style>
@import "../styles/common.pcss";

.wrapper {
  display: flex;
  justify-content: center;
  gap: 2.4rem;
}

@media (--small-viewport) {
  .wrapper {
    display: block;
  }
}
</style>
<div class="wrapper">
  <Slant text="fritz" tag="h1" size={size} />
  <Flame size={size} />
</div>