---
import fPng from '../images/frankenstein-fritz-flame.png';
import fWebp from '../images/frankenstein-fritz-flame.webp';

const { size = 'small' } = Astro.props;
---
<style>
  @import "../styles/common.pcss";

  .fritz-flame {
    width: 14rem;
    border-radius: 0.8rem;
    min-height: 134px;
    max-width: 100%;
  }

  .fritz-flame.large {
    width: 22rem;
  }

  @media (--small-viewport) {
    .fritz-flame {
      width: 22rem;
    }
  }
</style>
<picture>
  <source srcset={fWebp} type="image/webp"/>
  <source srcset={fPng} type="image/jpeg"/>
  <img src={fPng} class:list={['fritz-flame', size]} title="Fritz, with a flame"/>
</picture>